<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_bottom_dialog">

    <TextView
        android:id="@+id/tv_share"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/d_5"
        android:drawableTop="@mipmap/ic_share"
        android:gravity="center"
        android:text="分享"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/sp14"
        android:layout_marginTop="@dimen/d_20"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_collect"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tv_collect"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/d_5"
        android:drawableTop="@mipmap/ic_collect_tag"
        android:gravity="center"
        android:text="收藏"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/sp14"
        android:layout_marginTop="@dimen/d_20"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_copy"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/tv_share" />

    <TextView
        android:id="@+id/tv_copy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/d_5"
        android:drawableTop="@mipmap/ic_copy_url"
        android:gravity="center"
        android:text="复制链接"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/sp14"
        android:layout_marginTop="@dimen/d_20"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_browser"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/tv_collect" />

    <TextView
        android:id="@+id/tv_browser"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/d_5"
        android:drawableTop="@mipmap/ic_browser"
        android:gravity="center"
        android:text="打开浏览器"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/sp14"
        android:layout_marginTop="@dimen/d_20"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/tv_copy" />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d_20"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/colorBlack"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/d_20"
        android:textSize="@dimen/sp14"
        app:layout_constraintTop_toBottomOf="@id/tv_share" />
</android.support.constraint.ConstraintLayout>